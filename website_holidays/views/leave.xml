<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_leave_view_document_form" model="ir.ui.view">
        <field name="name">hr.leave.view.document.form</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager" />
        <field name="arch" type="xml">
            <field name="department_id" position="after">
                <field name="documents_ids"/>
            </field>
            
        </field>
    </record>
     <record id="view_leave_type_portal_form" model="ir.ui.view">
        <field name="name">hr.leave.type.resumen.form</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form" />
            <field name="arch" type="xml">
                <group name="description" position="inside">
                    <field name="available_portal"/>
                </group>
            </field>
    </record>
</odoo>