		inherit_id="website_hr.website_hr_menu">
		<div id="menu" position="inside">
			<div class="col-4 text-center" style="margin-top:25px;">

				<a href="/my/resumen" class="d-block h-100" itemprop="url">
					<img src="/website_hr_day_resumen/static/src/img/lupa.jpg"
						style="max-height: 70px;" />
					<p>Resumen H.</p>
				</a>
			</div>
		</div>
	</template>
	<template id="portal_resumen_month">
		<t t-call="website.layout">
		<div class="row">
			<div class="col-3">
				<h1>
					<a href="/employee">
						<span>Atr√°s</span>
					</a>
				</h1>
			</div>
			<div class="col-9 text-right">
			    <h1>
                   <img src="/website_hr_day_resumen/static/src/img/lupa.jpg"
                       style="max-height: 40px;" >Resumen H.</img></h1>
			</div>
		</div>
		<div class="text-center">
			<div class="row">

				<div class="col-3">
					<a t-att-href="ant_url">Ant.</a>
				</div>
				<div class="col-6">
				   <h3>
					<span>Horas acumuladas:</span> <span t-esc="overtime_qty"/>
                       </h3>

				</div>
				<div class="col-3">
					<a t-att-href="next_url">Sig.</a>
				</div>
			</div>
		</div>
			<div>
				<table style="margin-left:5px;width:100%">
					<thead>
						<th style="border-bottom: 0.5px solid grey;background-color:#F6F5F4;">Fecha</th>
						<th style="border-bottom: 0.5px solid grey;">H. teo</th>
						<th style="border-bottom: 0.5px solid grey;background-color:#F6F5F4;">H. Ext</th>
						<th style="border-bottom: 0.5px solid grey;">H. ret</th>
						<th style="border-bottom: 0.5px solid grey;background-color:#F6F5F4;">Au. J</th>
						<th style="border-bottom: 0.5px solid grey;">Au. NJ</th>
					</thead>
					<tbody>
						<t t-foreach="resumen_ids" t-as="resumen">
							<tr>
								<td style="border-bottom: 0.5px solid grey;background-color:#F6F5F4;" ><span t-field="resumen.day" t-field-options='{"format";"DD/MM/yyyy"}'/></td>
								<td style="border-bottom: 0.5px solid grey;"><span t-if="resumen.teorical_hours" t-esc="resumen.get_hex_th()" /></td>
								<td style="border-bottom: 0.5px solid grey;background-color:#F6F5F4;"><span t-if="resumen.extra_hours" t-esc="resumen.get_hex_extra_hours()"/></td>
								<td style="border-bottom: 0.5px solid grey;"><span t-if="resumen.hours_delayed" t-esc="resumen.get_hex_h_retraso()"/></td>
								<td style="border-bottom: 0.5px solid grey;background-color:#F6F5F4;"><span t-if="resumen.j_hours" t-esc="resumen.get_hex_aus_j()"/></td>
								<td style="border-bottom: 0.5px solid grey;"><span t-if="resumen.no_j_hours" t-esc="resumen.get_hex_aus_n_j()"/></td>
							</tr>
						</t>
					</tbody>
				</table>
			</div>
		</t>
	</template>
